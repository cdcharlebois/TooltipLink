  <properties>
	<property key="tooltipform" type="form">
      <caption>Tooltip form</caption>
	  <category>Appearance</category>
      <description>Tooltip form</description>
    </property>
	<property key="tooltippos" type="enumeration" defaultValue="below">
      <caption>Tooltip position</caption>
	  <category>Appearance</category>
      <description>Tooltip position</description>
      <enumerationValues>
        <enumerationValue key="above">Above</enumerationValue>
        <enumerationValue key="after">After</enumerationValue>
		<enumerationValue key="below">Below</enumerationValue>
        <enumerationValue key="before">Before</enumerationValue>
	</enumerationValues>
    </property>
 	<property key="cssclass" type="string" required="false">
      <caption>Tooltip css class</caption>
      <category>Appearance</category>
      <description>Tooltip css class</description>
	</property>
 	<property key="showIfEmpty" type="boolean" defaultValue="false">
      <caption>Show if empty</caption>
      <category>Appearance</category>
      <description>Whether to show the popover if the contents of the target is empty.</description>
	</property>
	<property key="tooltipmode" type="enumeration" defaultValue="hover">
      <caption>Activated by</caption>
	  <category>Appearance</category>
      <description>How the tooltip is activated and shown.</description>
      <enumerationValues>
			<enumerationValue key="hover">Hover</enumerationValue>
			<enumerationValue key="click">Click</enumerationValue>
		</enumerationValues>
    </property>
 	<property key="targetnodeCSS" type="string" required="false">
      <caption>Target Selector</caption>
      <category>Appearance</category>
      <description>Selector to the object in this same parent container on which you want the tooltip to operate (e.g.: ".tooltiptarget").</description>
	</property>
 	<property key="targetnodesubCSS" type="string" required="false">
      <caption>Target sub-object selector</caption>
      <category>Appearance</category>
      <description>Optional: selector to the DOM object inside the target object. Use this if you need to select (for example) just the data and not an adjoining label.</description>
	</property>
	<property key="targetToggleClass" type="string" required="false">
      <caption>Toggle class</caption>
      <category>Appearance</category>
      <description>The CSS class to be toggled on the form target when the tooltip is visibile.</description>
	</property> 
  </properties>
</widget>
